{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "avatar": {
          "type": "string",
          "format": "uri",
          "description": "URL to the user's avatar image."
        },
        "role": {
          "type": "string",
          "enum": ["user", "vendor", "admin"],
          "description": "The user's role in the system."
        },
        "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "The date and time the user was created."
        }
      },
      "required": ["name", "email", "role", "createdAt"]
    },
    "ad": {
      "title": "Ad",
      "description": "An advertisement posted by a user.",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "description": { "type": "string" },
        "images": { "type": "array", "items": { "type": "string", "format": "uri" } },
        "category": { "type": "string" },
        "price": { "type": "number" },
        "location": { "type": "string" },
        "adType": { "type": "string", "enum": ["normal", "featured", "paid"] },
        "status": { "type": "string", "enum": ["pending", "active", "rejected"] },
        "userId": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "expiresAt": { "type": "string", "format": "date-time" }
      },
      "required": ["title", "description", "category", "price", "location", "adType", "status", "userId", "createdAt"]
    }
  },
  "auth": {
    "providers": ["google.com", "facebook.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/backend/entities/user"
      },
      "description": "Stores user profile information."
    },
    "/ads/{adId}": {
      "schema": {
        "$ref": "#/backend/entities/ad"
      },
      "description": "Stores advertisement listings."
    }
  }
}
